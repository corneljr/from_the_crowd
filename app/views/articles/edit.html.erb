

<%= form_for(@article) do |f| %>

<div class='show-article-title-container center'>
	<h1 class="profile_header"><%= f.text_field :title  %></h1>
	<div class="row">
	<div class="article_img small-11 small-centered columns center"><%= image_tag(@article.image.url) %></div>
</div> 
	<div  class="profile_header"><%= f.file_field :image %></div>
 
	<h4 class='show-article-title'>By <%= @article.user.name %></h4>
</div>

	<div class='show-article-container'>
		<p class='body'><%= f.text_area :body, :id => "text_area"  %><p>
	</div>
	

	<p class="center"><%= f.submit "Update Article", class: "submit_btn"  %></p>


<% end %>

<style type="text/css">
	
	input[name="body"] {
		font-size: 3em;
	}
</style>