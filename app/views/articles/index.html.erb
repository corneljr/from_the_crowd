
<div id="index-intro" class="center">
	<h2>All | Most Discussed | Top Rated | Most Recent</h2>
	<%= link_to "Create Article", new_article_path, class: 'button tiny create-link' %>
</div>

<div id="tag_cloud">
  <% tag_cloud Article.tag_counts, %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>


		<% @articles.each do |article|  %>
				<%= link_to article_path(article) do %>
					<div class="article-card" style="background-image: url(<%= article.image.url %>)" >
						<h2 class="center a-title"><%= article.title  %></h2>
							<p>by <%= article.user.name %></p> 
					</div>		
				<% end %>		
		<% end %>

<script type="text/javascript">
	$(document).ready(function() {
			$('h2').hide();
	});
		
</script>