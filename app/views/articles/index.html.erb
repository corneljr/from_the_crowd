
<div id="index-intro" class="center">
	<h3><span class="sort-link"><%= link_to "Most Recent", articles_path  %></span> | <span class="sort-link"><a href="#">Top Rated</a></span> | <span class="sort-link"><a href="#">Most Discussed</a></span></h3>
	<%= link_to "Create Article", new_article_path, class: 'button tiny create-link' %>
</div>

<div id="tag_cloud">
  <% tag_cloud Article.tag_counts, %w{s m l} do |tag| %>
    <%= link_to tag.name, tag_path(tag.name)%>
  <% end %>
</div>


<div id="articles" class="transitions-enabled container">
	<div id="most-recent"><%= render @recent_articles %></div>
	<div id='top-rated'><%= render @articles %></div>
	<div id="most-discussed"><%= render @most_discussed %></div>
</div>

<%= paginate @articles %>
