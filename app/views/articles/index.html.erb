
<div id="index-intro" class="center">
	<h2>All | Most Discussed | Top Rated | Most Recent</h2>
	<%= link_to "Create Article", new_article_path, class: 'button tiny create-link' %>
</div>

<div id="tag_cloud">
  <% tag_cloud Article.tag_counts, %w{s m l} do |tag| %>
    <%= link_to tag.name, tag_path(tag.name)%>
  <% end %>
</div>


		<% @articles.each do |article|  %>
				<%= link_to article_path(article) do %>
					<div class="article-card" style="background-image: url(<%= article.image.url %>)" >
						<h3 class="center a-title"><%= article.title  %></h3>
							<p>by <%= article.user.name %></p> 
					</div>		
				<% end %>		
		<% end %>
	
	 <%= link_to new_article_path do %>
				<div class="article-card" style="background-color: black;">
						<h2 class="center a-title">Contribute your ideas today.</h2>
				</div>		
		<% end %>	