<div class="article-img">
	<%= image_tag(@article.image.url) %>
	<h1 class='show-article-title'><span><%= @article.title %></span></h1>
	<h4 class='show-article-author'><span>By <%= @article.user.name %></span></h4>
</div>

<div class='show-article-background'>

	<p>Tags: <%= @article.tag_list %></p>

	<div class='show-article-container'>
		<p class='body'><%= @article.body  %><p>
			<div class="vote_gauge">
				<%= form_for [@article, @vote] do |f| %>
					<p><%= f.range_field :quality, :min=>0, :max=>100, :step=>10, :class=>"range_slide"%></p>
					<% if @voted %>
						<%= f.submit "Vote", disabled: true %>
					<% else %>
						<div class="text-center">
							<%= f.submit "Vote", class: "submit_btn" %>
						</div>
					<% end %>
				<% end %>
			</div>
	</div>

	<div class='comments-container center'>
		<h3 class='comments-header'>Comments</h3>
		<%= form_for [@article, @comment] do |f| %>
			<p><%= f.text_field :body  %><%= f.submit 'Post', class: 'button small' %></p>
		<% end %>

		<% @article.comments.each do |comment| %>
			<div class='row'>
				<div class='large-4 columns'>
					<div class='commenter center'>
						<%= image_tag(comment.user.avatar.url(:thumb), class: 'comment-pic') %>
						<p><strong><%= link_to comment.user.name, comment.user, class: 'username'%></strong></p>
					</div>
				</div>
				<div class='large-8 columns'>
					<div class='comment-container'>
						<%= comment.body %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>