<h1 class="reg_header">New Article</h1>
<div class='new-article-container'>
	<%= form_for(@article) do |f| %>
		<%= f.text_field :title, placeholder: 'Title', class: 'new-article article-title'  %>
		<%= f.text_area :body, placeholder: 'Write here..', class: 'new-article article-body'  %>
		<div class='article-post'><%= f.submit 'Post', class: 'post-button'%></div>         
		<div class='article-save'><%= link_to 'Save', '#', class: 'save-button' %></div>
	<% end %>
</div>