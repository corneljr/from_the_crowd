<h1 class="reg_header">New Article</h1>
<div class='new-article-container'>
	<%= form_for(@article) do |f| %>
		<%= f.text_field :title, placeholder: 'Title', class: 'new-article article-title'  %>
		<%= f.text_field :tag_list, placeholder: 'Tags', class: 'new-article article-title'  %>
		<%= f.text_area :body, placeholder: 'Write here..', class: 'new-article article-text-area'  %>
		<%= f.select :post_status, options_for_select(['save','post']), class: 'submission-type' %>
		<div class='article-post'><%= f.submit 'Post', class: 'button tiny right post'%></div>         
	<% end %>
</div>